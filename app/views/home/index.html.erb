      <% else %>
        <%# Regular user: Join room CTA %>
        <div class="mx-auto max-w-md">
          <div class="rounded-2xl border border-slate-200 bg-white p-8 text-center">
            <div class="mx-auto flex h-14 w-14 items-center justify-center rounded-2xl bg-indigo-100 text-indigo-600 mb-5">
