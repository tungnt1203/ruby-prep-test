  <% else %>
    <%# ===== GUEST LANDING PAGE ===== %>
    
    <%# Hero Section %>
    <section class="relative overflow-hidden bg-gradient-to-br from-indigo-50 via-white to-purple-50">
      <div class="absolute inset-0 bg-grid-slate-100 [mask-image:linear-gradient(0deg,transparent,black)]"></div>
      <div class="relative mx-auto max-w-7xl px-4 py-20 sm:px-6 sm:py-32 lg:px-8">
        <div class="text-center max-w-4xl mx-auto">
