<div class="min-h-screen bg-slate-50 flex items-center justify-center p-4">
  <div class="w-full max-w-lg rounded-xl bg-white shadow-sm ring-1 ring-slate-200 p-8">
    <h1 class="text-xl font-semibold text-slate-900">Exam created</h1>

    <div class="mt-6 space-y-4">
      <div>
        <label class="block text-sm font-medium text-slate-700 mb-1">Exam code (hash_id)</label>
        <div class="flex gap-2">
          <input
            type="text"
            value="<%= @exam_code %>"
            readonly
            id="exam_code_input"
            class="flex-1 rounded-lg border border-slate-300 bg-slate-50 px-3 py-2 text-slate-900 font-mono text-sm"
          />
          <button
            type="button"
            onclick="navigator.clipboard.writeText(document.getElementById('exam_code_input').value).then(() => { this.textContent = 'Copied!'; setTimeout(() => { this.textContent = 'Copy'; }, 1500); })"
            class="rounded-lg bg-indigo-600 px-4 py-2 text-sm font-medium text-white hover:bg-indigo-500 shrink-0"
          >
            Copy
          </button>
        </div>
      </div>

      <div class="rounded-lg bg-amber-50 border border-amber-200 p-4">
        <p class="text-sm font-medium text-amber-800">Recommended: Schedule a room for timed exam</p>
        <p class="mt-1 text-xs text-amber-700">Candidates join room → wait for start time → same exam, timer, leaderboard.</p>
        <%= link_to "Schedule a room for this exam", new_room_path(exam_hash_id: @exam_code), class: "mt-3 inline-flex items-center rounded-lg bg-amber-600 px-4 py-2 text-sm font-semibold text-white hover:bg-amber-500" %>
      </div>

      <% exam_url = "#{request.base_url}#{exams_path}?exam_code=#{@exam_code}" %>
      <div>
        <label class="block text-sm font-medium text-slate-700 mb-1">Exam link (solo / practice)</label>
        <p class="mb-1 text-xs text-slate-500">Direct link for one person. No room timer, no leaderboard. Use for self-practice.</p>
        <div class="flex flex-col gap-2">
          <input
            type="text"
            value="<%= exam_url %>"
            readonly
            id="exam_url_input"
            class="w-full rounded-lg border border-slate-300 bg-slate-50 px-3 py-2 text-slate-900 font-mono text-sm"
          />
          <div class="flex gap-2">
            <%= link_to "Start", exams_path(exam_code: @exam_code), class: "rounded-lg bg-indigo-600 px-4 py-2 text-sm font-medium text-white hover:bg-indigo-500 text-center" %>
            <button
              type="button"
              onclick="navigator.clipboard.writeText('<%= exam_url %>').then(() => { this.textContent = 'Copied!'; setTimeout(() => { this.textContent = 'Copy link'; }, 1500); })"
              class="rounded-lg border border-slate-300 bg-white px-4 py-2 text-sm font-medium text-slate-700 hover:bg-slate-50"
            >
              Copy link
            </button>
          </div>
        </div>
      </div>
    </div>

    <p class="mt-6 text-xs text-slate-500">
      <%= link_to "← Create another exam", pre_exams_path, class: "text-indigo-600 hover:underline" %>
    </p>
  </div>
</div>
