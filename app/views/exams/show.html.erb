<% if @questions_for_result.present? %>
  <% questions = @questions_for_result %>
  <% total_questions = questions.size %>
  <% correct_count = @score_from_db.present? ? @score_from_db[:score] : 0 %>
  <% pass_rate = total_questions > 0 ? (correct_count.to_f / total_questions * 100).round : 0 %>

  <div
    class="flex flex-col lg:flex-row lg:h-screen bg-slate-50"
    data-controller="exam-result"
    data-exam-result-total-value="<%= total_questions %>"
    data-exam-result-current-value="0"
  >
    <%# Sidebar %>
    <aside class="lg:w-64 xl:w-72 lg:flex-shrink-0 lg:border-r lg:border-slate-200 lg:overflow-y-auto bg-white">
      <div class="p-4">
        <%# Score summary %>
        <div class="mb-4 pb-4 border-b border-slate-100 text-center">
          <div class="inline-flex items-center justify-center h-16 w-16 rounded-2xl mb-3 <%= correct_count >= (@score_from_db.present? ? (@score_from_db[:number_pass] || 0) : 0) ? 'bg-emerald-100 text-emerald-600' : 'bg-rose-100 text-rose-600' %>">
            <% if correct_count >= (@score_from_db.present? ? (@score_from_db[:number_pass] || 0) : 0) %>
              <svg class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
            <% else %>
              <svg class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M12 9v3.75m9-.75a9 9 0 11-18 0 9 9 0 0118 0zm-9 3.75h.008v.008H12v-.008z" /></svg>
            <% end %>
          </div>
          <p class="text-2xl font-extrabold text-slate-900"><%= correct_count %> / <%= total_questions %></p>
          <p class="text-sm font-medium text-slate-500 mt-1"><%= pass_rate %>% correct</p>
          <%# Progress ring %>
          <div class="mt-3 h-1.5 rounded-full bg-slate-100 overflow-hidden">
            <div class="h-full rounded-full transition-all duration-500 <%= correct_count >= (@score_from_db.present? ? (@score_from_db[:number_pass] || 0) : 0) ? 'bg-emerald-500' : 'bg-rose-400' %>" style="width: <%= pass_rate %>%"></div>
          </div>
        </div>

        <%# Legend %>
        <div class="mb-4 space-y-2 text-xs text-slate-500">
          <p class="flex items-center gap-2">
            <span class="w-4 h-4 rounded-md bg-emerald-500 shrink-0"></span>
            Correct
          </p>
          <p class="flex items-center gap-2">
            <span class="w-4 h-4 rounded-md bg-rose-400 shrink-0"></span>
            Incorrect
          </p>
          <p class="flex items-center gap-2">
            <span class="w-4 h-4 rounded-md bg-slate-200 shrink-0"></span>
            Unanswered
          </p>
        </div>

        <%# Question grid %>
        <p class="text-xs font-semibold text-slate-500 uppercase tracking-wide mb-2">Questions</p>
        <div class="grid grid-cols-5 gap-1.5">
          <% questions.each_with_index do |q, index| %>
            <% detail = @details_by_qid && @details_by_qid[q["id"].to_i] %>
            <% correct = detail ? detail[:correct] : nil %>
            <button
              type="button"
              class="w-9 h-9 rounded-lg text-xs font-semibold transition-all duration-150 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-1 cursor-pointer <%= index == 0 ? 'bg-indigo-600 text-white' : correct == true ? 'bg-emerald-500 text-white' : correct == false ? 'bg-rose-400 text-white' : 'bg-slate-200 text-slate-500' %>"
              data-exam-result-target="questionItem"
              data-question-index="<%= index %>"
              data-question-correct="<%= correct.nil? ? '' : correct %>"
              data-action="click->exam-result#goTo"
            >
              <%= index + 1 %>
            </button>
          <% end %>
        </div>
      </div>
    </aside>

    <%# Main content %>
    <main class="flex-1 flex flex-col min-h-0 lg:overflow-y-auto">
      <div class="flex-1 p-4 sm:p-6 lg:p-8">
        <% questions.each_with_index do |question, index| %>
          <% detail = @details_by_qid && @details_by_qid[question["id"].to_i] %>
          <% answer_ids = detail ? detail[:user_answers] : [] %>
          <% choices = question["choices"] || [] %>
          <% is_correct = detail ? detail[:correct] : nil %>

          <section
            class="rounded-2xl bg-white border border-slate-200 overflow-hidden <%= index == 0 ? '' : 'hidden' %>"
            data-exam-result-target="questionPanel"
            data-question-index="<%= index %>"
          >
            <%# Question header with result badge %>
            <div class="px-6 py-4 border-b border-slate-100 flex flex-wrap items-center gap-2">
              <span class="inline-flex items-center rounded-lg bg-indigo-100 px-2.5 py-1 text-xs font-bold text-indigo-700">Q<%= index + 1 %></span>
              <% if question["topic_key"].present? %>
                <span class="inline-flex items-center rounded-lg bg-slate-100 px-2 py-1 text-xs font-medium text-slate-600" title="<%= question['topic_name'] %>"><%= question["topic_key"] %></span>
              <% end %>
              <% if question["type"] == "multiple" %>
                <span class="inline-flex items-center rounded-lg bg-amber-50 px-2 py-1 text-xs font-medium text-amber-700">Multiple answers</span>
              <% end %>
              <% if is_correct == true %>
                <span class="ml-auto inline-flex items-center gap-1 rounded-lg bg-emerald-50 px-2.5 py-1 text-xs font-bold text-emerald-700">
                  <svg class="h-3.5 w-3.5" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M16.704 4.153a.75.75 0 01.143 1.052l-8 10.5a.75.75 0 01-1.127.075l-4.5-4.5a.75.75 0 011.06-1.06l3.894 3.893 7.48-9.817a.75.75 0 011.05-.143z" clip-rule="evenodd" /></svg>
                  Correct
                </span>
              <% elsif is_correct == false %>
                <span class="ml-auto inline-flex items-center gap-1 rounded-lg bg-rose-50 px-2.5 py-1 text-xs font-bold text-rose-700">
                  <svg class="h-3.5 w-3.5" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M4.28 3.22a.75.75 0 00-1.06 1.06L8.94 10l-5.72 5.72a.75.75 0 101.06 1.06L10 11.06l5.72 5.72a.75.75 0 101.06-1.06L11.06 10l5.72-5.72a.75.75 0 00-1.06-1.06L10 8.94 4.28 3.22z" clip-rule="evenodd" /></svg>
                  Incorrect
                </span>
              <% end %>
            </div>

            <div class="p-6">
              <%# Question text %>
              <div class="prose prose-slate max-w-none text-slate-700 mb-6">
                <%= simple_exam_markdown(question["question"]) %>
              </div>

              <%# Choices with result highlighting %>
              <p class="text-xs font-semibold text-slate-500 uppercase tracking-wide mb-3">Your Answers</p>
              <ul class="space-y-2">
                <% is_multi = question["type"] == "multiple" %>
                <% choices.each do |choice| %>
                  <% selected = answer_ids.include?(choice["id"].to_s) %>
                  <li class="flex items-center gap-3 p-4 rounded-xl border transition-colors duration-150 <%= selected ? (is_correct ? 'border-emerald-300 bg-emerald-50' : 'border-rose-300 bg-rose-50') : 'border-slate-200 bg-white' %>">
                    <% if selected %>
                      <% if is_correct %>
                        <span class="flex-shrink-0 flex h-6 w-6 items-center justify-center <%= is_multi ? 'rounded-md' : 'rounded-full' %> bg-emerald-500 text-white">
                          <svg class="h-3.5 w-3.5" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M16.704 4.153a.75.75 0 01.143 1.052l-8 10.5a.75.75 0 01-1.127.075l-4.5-4.5a.75.75 0 011.06-1.06l3.894 3.893 7.48-9.817a.75.75 0 011.05-.143z" clip-rule="evenodd" /></svg>
                        </span>
                      <% else %>
                        <span class="flex-shrink-0 flex h-6 w-6 items-center justify-center <%= is_multi ? 'rounded-md' : 'rounded-full' %> bg-rose-400 text-white">
                          <svg class="h-3.5 w-3.5" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M4.28 3.22a.75.75 0 00-1.06 1.06L8.94 10l-5.72 5.72a.75.75 0 101.06 1.06L10 11.06l5.72 5.72a.75.75 0 101.06-1.06L11.06 10l5.72-5.72a.75.75 0 00-1.06-1.06L10 8.94 4.28 3.22z" clip-rule="evenodd" /></svg>
                        </span>
                      <% end %>
                    <% else %>
                      <span class="flex-shrink-0 h-6 w-6 <%= is_multi ? 'rounded-md border-2' : 'rounded-full border-2' %> border-slate-300 bg-white"></span>
                    <% end %>
                    <span class="flex-1 text-sm font-medium text-slate-800 prose prose-slate max-w-none"><%= choice["id"] %>. <%= simple_exam_markdown(choice["label"].to_s.strip) %></span>
                  </li>
                <% end %>
              </ul>

              <% if answer_ids.blank? || answer_ids.empty? %>
                <p class="mt-3 text-sm text-slate-400 italic">You did not answer this question.</p>
              <% end %>

              <%# Explanation %>
              <% if detail.present? %>
                <div class="mt-6 rounded-xl bg-slate-50 border border-slate-200 p-4">
                  <p class="text-xs font-semibold text-slate-500 uppercase tracking-wide mb-2">Explanation</p>
                  <% if detail[:description].present? %>
                    <div class="text-sm text-slate-700"><%= simple_exam_markdown(detail[:description]) %></div>
                  <% else %>
                    <p class="text-sm text-slate-500 italic">No explanation available.</p>
                  <% end %>
                </div>
              <% end %>
            </div>
          </section>
        <% end %>
      </div>

      <%# Navigation footer %>
      <div class="flex-shrink-0 flex items-center justify-between gap-3 p-4 sm:p-6 lg:p-8 border-t border-slate-200 bg-white">
        <button
          type="button"
          class="inline-flex items-center gap-2 rounded-xl border border-slate-200 bg-white px-4 py-2.5 text-sm font-semibold text-slate-700 hover:bg-slate-50 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 transition-colors duration-150 cursor-pointer"
          data-action="click->exam-result#prev"
        >
          <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M10.5 19.5L3 12m0 0l7.5-7.5M3 12h18" /></svg>
          Previous
        </button>
        <div class="flex items-center gap-2">
          <%= link_to (@room_code.present? ? exams_path(exam_code: @hash_id, room_code: @room_code) : exams_path(exam_code: @hash_id)), class: "inline-flex items-center gap-1 rounded-xl border border-slate-200 bg-white px-4 py-2.5 text-sm font-semibold text-slate-700 hover:bg-slate-50 transition-colors duration-150 cursor-pointer" do %>
            <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M16.023 9.348h4.992v-.001M2.985 19.644v-4.992m0 0h4.992m-4.993 0l3.181 3.183a8.25 8.25 0 0013.803-3.7M4.031 9.865a8.25 8.25 0 0113.803-3.7l3.181 3.182" /></svg>
            Try again
          <% end %>
          <% if @room_code.present? %>
            <%= link_to room_results_path(@room_code), class: "inline-flex items-center gap-1 rounded-xl bg-slate-100 px-4 py-2.5 text-sm font-semibold text-slate-700 hover:bg-slate-200 transition-colors duration-150 cursor-pointer" do %>
              <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M3 13.125C3 12.504 3.504 12 4.125 12h2.25c.621 0 1.125.504 1.125 1.125v6.75C7.5 20.496 6.996 21 6.375 21h-2.25A1.125 1.125 0 013 19.875v-6.75z" /></svg>
              Leaderboard
            <% end %>
          <% end %>
        </div>
        <button
          type="button"
          class="inline-flex items-center gap-2 rounded-xl bg-indigo-600 px-4 py-2.5 text-sm font-semibold text-white hover:bg-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 transition-colors duration-150 cursor-pointer"
          data-action="click->exam-result#next"
        >
          Next
          <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" /></svg>
        </button>
      </div>
    </main>
  </div>
<% else %>
  <div class="min-h-[calc(100vh-3.5rem)] flex items-center justify-center p-6">
    <div class="text-center">
      <div class="mx-auto flex h-14 w-14 items-center justify-center rounded-2xl bg-slate-100 text-slate-400 mb-4">
        <svg class="h-7 w-7" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M12 9v3.75m9-.75a9 9 0 11-18 0 9 9 0 0118 0zm-9 3.75h.008v.008H12v-.008z" /></svg>
      </div>
      <h2 class="text-lg font-bold text-slate-900">Results Not Found</h2>
      <p class="mt-2 text-sm text-slate-500">Exam or submission not found.</p>
      <%= link_to "Back to exam", exams_path(exam_code: @hash_id), class: "mt-4 inline-block text-sm font-semibold text-indigo-600 hover:text-indigo-500 transition-colors duration-150" %>
    </div>
  </div>
<% end %>
