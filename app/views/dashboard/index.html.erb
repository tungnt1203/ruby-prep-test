<div class="min-h-[calc(100vh-3.5rem)] py-8 px-4 sm:px-6 lg:px-8">
  <div class="mx-auto max-w-5xl">
    <%# Page header %>
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4 mb-8">
      <div>
        <h1 class="text-2xl font-bold text-slate-900">Dashboard</h1>
        <p class="mt-1 text-sm text-slate-500">Manage your scheduled rooms and track candidate progress.</p>
      </div>
      <div class="flex flex-wrap gap-2">
        <%= link_to pre_exams_path, class: "inline-flex items-center gap-2 rounded-xl bg-indigo-600 px-4 py-2.5 text-sm font-semibold text-white hover:bg-indigo-500 transition-colors duration-150 cursor-pointer" do %>
          <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" /></svg>
          Create Exam
        <% end %>
        <%= link_to new_room_path, class: "inline-flex items-center gap-2 rounded-xl border border-slate-200 bg-white px-4 py-2.5 text-sm font-semibold text-slate-700 hover:bg-slate-50 transition-colors duration-150 cursor-pointer" do %>
          <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6h4.5m4.5 0a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
          Schedule Room
        <% end %>
      </div>
    </div>

    <%# Stats cards %>
    <% total_rooms = @rooms.size %>
    <% active_rooms = @rooms.count { |r| r.started? && !r.expired? } %>
    <% upcoming_rooms = @rooms.count { |r| !r.started? } %>
    <% ended_rooms = @rooms.count { |r| r.expired? } %>
    <div class="grid grid-cols-2 gap-4 sm:grid-cols-4 mb-8">
      <div class="rounded-2xl border border-slate-200 bg-white p-5">
        <p class="text-xs font-semibold text-slate-500 uppercase tracking-wide">Total Rooms</p>
        <p class="mt-2 text-2xl font-bold text-slate-900"><%= total_rooms %></p>
      </div>
      <div class="rounded-2xl border border-indigo-200 bg-indigo-50 p-5">
        <p class="text-xs font-semibold text-indigo-600 uppercase tracking-wide">Upcoming</p>
        <p class="mt-2 text-2xl font-bold text-indigo-700"><%= upcoming_rooms %></p>
      </div>
      <div class="rounded-2xl border border-amber-200 bg-amber-50 p-5">
        <p class="text-xs font-semibold text-amber-600 uppercase tracking-wide">In Progress</p>
        <p class="mt-2 text-2xl font-bold text-amber-700"><%= active_rooms %></p>
      </div>
      <div class="rounded-2xl border border-slate-200 bg-slate-50 p-5">
        <p class="text-xs font-semibold text-slate-500 uppercase tracking-wide">Ended</p>
        <p class="mt-2 text-2xl font-bold text-slate-600"><%= ended_rooms %></p>
      </div>
    </div>

    <%# Rooms table %>
    <div class="rounded-2xl border border-slate-200 bg-white overflow-hidden">
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-slate-200">
          <thead>
            <tr class="bg-slate-50">
              <th scope="col" class="px-5 py-3.5 text-left text-xs font-semibold text-slate-500 uppercase tracking-wide">Room</th>
              <th scope="col" class="px-5 py-3.5 text-left text-xs font-semibold text-slate-500 uppercase tracking-wide">Exam</th>
              <th scope="col" class="px-5 py-3.5 text-left text-xs font-semibold text-slate-500 uppercase tracking-wide">Starts</th>
              <th scope="col" class="px-5 py-3.5 text-left text-xs font-semibold text-slate-500 uppercase tracking-wide">Status</th>
              <th scope="col" class="px-5 py-3.5 text-right text-xs font-semibold text-slate-500 uppercase tracking-wide">Actions</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-slate-100">
            <% @rooms.each do |room| %>
              <% status = room.expired? ? "Ended" : (room.started? ? "In progress" : "Upcoming") %>
              <tr class="hover:bg-slate-50/70 transition-colors duration-100">
                <td class="px-5 py-4">
                  <p class="text-sm font-semibold text-slate-900"><%= room.name.presence || "Room #{room.room_code}" %></p>
                  <p class="text-xs text-slate-400 font-mono"><%= room.room_code %></p>
                </td>
                <td class="px-5 py-4 text-sm text-slate-600"><%= room.exam_session.exam_title %></td>
                <td class="px-5 py-4 text-sm text-slate-500"><%= room.starts_at.strftime("%b %d, %Y %H:%M") %></td>
                <td class="px-5 py-4">
                  <% status_classes = case status
                    when "Ended" then "bg-slate-100 text-slate-600"
                    when "In progress" then "bg-amber-100 text-amber-700"
                    else "bg-indigo-100 text-indigo-700"
                  end %>
                  <span class="inline-flex items-center gap-1.5 rounded-full px-2.5 py-1 text-xs font-semibold <%= status_classes %>">
                    <% if status == "In progress" %>
                      <span class="h-1.5 w-1.5 rounded-full bg-amber-500 animate-pulse"></span>
                    <% end %>
                    <%= status %>
                  </span>
                </td>
                <td class="px-5 py-4 text-right">
                  <div class="flex items-center justify-end gap-1">
                    <%= link_to room_path(room.room_code), class: "inline-flex items-center gap-1 rounded-lg px-2.5 py-1.5 text-xs font-medium text-indigo-600 hover:bg-indigo-50 transition-colors duration-150 cursor-pointer" do %>
                      <svg class="h-3.5 w-3.5" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M13.5 6H5.25A2.25 2.25 0 003 8.25v10.5A2.25 2.25 0 005.25 21h10.5A2.25 2.25 0 0018 18.75V10.5m-10.5 6L21 3m0 0h-5.25M21 3v5.25" /></svg>
                      Room
                    <% end %>
                    <%= link_to room_results_path(room.room_code), class: "inline-flex items-center gap-1 rounded-lg px-2.5 py-1.5 text-xs font-medium text-indigo-600 hover:bg-indigo-50 transition-colors duration-150 cursor-pointer" do %>
                      <svg class="h-3.5 w-3.5" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M3 13.125C3 12.504 3.504 12 4.125 12h2.25c.621 0 1.125.504 1.125 1.125v6.75C7.5 20.496 6.996 21 6.375 21h-2.25A1.125 1.125 0 013 19.875v-6.75z" /></svg>
                      Results
                    <% end %>
                    <%= button_to "Delete", room_destroy_path(room.room_code), method: :delete, form: { data: { turbo_confirm: "Delete this room and all participant attempts? This cannot be undone." }, class: "inline" }, class: "inline-flex items-center gap-1 rounded-lg px-2.5 py-1.5 text-xs font-medium text-red-600 hover:bg-red-50 transition-colors duration-150 cursor-pointer" %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <% if @rooms.empty? %>
        <div class="px-5 py-16 text-center">
          <div class="mx-auto flex h-12 w-12 items-center justify-center rounded-2xl bg-slate-100 text-slate-400 mb-4">
            <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M2.25 12.75V12A2.25 2.25 0 014.5 9.75h15A2.25 2.25 0 0121.75 12v.75m-8.69-6.44l-2.12-2.12a1.5 1.5 0 00-1.061-.44H4.5A2.25 2.25 0 002.25 6v12a2.25 2.25 0 002.25 2.25h15A2.25 2.25 0 0021.75 18V9a2.25 2.25 0 00-2.25-2.25h-5.379a1.5 1.5 0 01-1.06-.44z" /></svg>
          </div>
          <p class="text-sm font-medium text-slate-600">No rooms yet</p>
          <p class="mt-1 text-sm text-slate-400">Create an exam and schedule a room to get started.</p>
          <div class="mt-6 flex items-center justify-center gap-3">
            <%= link_to "Create Exam", pre_exams_path, class: "rounded-xl bg-indigo-600 px-4 py-2.5 text-sm font-semibold text-white hover:bg-indigo-500 transition-colors duration-150 cursor-pointer" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
